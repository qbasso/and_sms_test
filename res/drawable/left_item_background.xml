<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:thickness="1dp" >

    <corners android:radius="20dp" />

    <padding
        android:bottom="15dp"
        android:left="25dp"
        android:right="25dp"
        android:top="15dp" />

    <gradient
        android:angle="90"
        android:centerColor="#6FE984"
        android:endColor="#32D74E"
        android:startColor="#ADFDBA"
        android:type="linear" />

    <stroke
        android:width="1dp"
        android:color="#555555" />

</shape>